@model web2.Models.User

@{
	ViewBag.Title = "About Us";
}

<style>
	.user-image-container {
		height: unset;
		width: auto;
	}

	.section button {
		width: 130px;
	}
</style>
<h2>@ViewBag.Title</h2>
<p>Thanks for using our website. The contact information for the architect of this website is below. Have a wonderful day!</p>

@using (Html.BeginForm("Index", "AboutUs", FormMethod.Post, new { enctype = "multipart/form-data" })) {

	<div>
		<div class="user-image-container">
			<img src="~/Content/Website_Images/2.jpg" />
			<p>@Model.FirstName @Model.LastName</p>
			<p><a href="mailto:@Model.Email">@Model.Email</a></p>
		</div>



		<div class="section">
			<button class="button-action" id="btnMore" name="btnSubmit" value="more"><i class='fa fa-info-circle'></i> More</button>
			<button class="button-action" id="btnClose" name="btnSubmit" value="close"><i class='fa fa-times'></i> Close</button>
		</div>
	</div>
}

